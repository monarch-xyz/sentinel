{
  "name": "@sentinel/delivery",
  "version": "0.1.0",
  "description": "Telegram delivery layer for Monarch Sentinel alerts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx scripts/migrate.ts",
    "lint": "biome check --write src scripts",
    "lint:check": "biome check src scripts",
    "lint:fix": "pnpm lint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "grammy": "^1.21.1",
    "hono": "^4.0.0",
    "@hono/node-server": "^1.8.0",
    "pg": "^8.11.3",
    "viem": "^2.7.0",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20"
  }
}
