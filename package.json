{
  "name": "sentinel",
  "version": "0.1.0",
  "description": "Flexible Signal Monitoring Service for Monarch",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "concurrently \"pnpm api\" \"pnpm worker\"",
    "dev:all": "concurrently \"pnpm api\" \"pnpm worker\" \"pnpm delivery:dev\"",
    "api": "tsx watch src/api/index.ts",
    "worker": "tsx watch src/worker/index.ts",
    "build": "tsc && pnpm -F @sentinel/delivery build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check --write . && pnpm -F @sentinel/delivery lint",
    "lint:check": "biome check . && pnpm -F @sentinel/delivery lint:check",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit && pnpm -F @sentinel/delivery typecheck",
    "test:integration": "vitest run tests/integration/",
    "test:condition": "tsx src/scripts/test-condition.ts",
    "db:migrate": "docker exec -i sentinel-postgres psql -U postgres -d sentinel < src/db/schema.sql",
    "db:migrate:direct": "tsx src/scripts/migrate.ts",
    "db:migrate:prod": "node dist/scripts/migrate.js",
    "db:reset": "docker exec -i sentinel-postgres psql -U postgres -d sentinel -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && pnpm db:migrate",
    "delivery:dev": "pnpm -F @sentinel/delivery dev",
    "delivery:build": "pnpm -F @sentinel/delivery build"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.2",
    "bullmq": "^5.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pino": "^8.21.0",
    "uuid": "^9.0.1",
    "viem": "^2.45.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  }
}
